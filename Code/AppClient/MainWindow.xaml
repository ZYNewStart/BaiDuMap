<Window x:Class="AppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Name="grdContent"></Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox Name="tbTime" Width="80"></TextBox>
            <Button Name="btnStart" Width="80" Height="40" Click="btnStart_Click" >开始</Button>
            <Button Name="btnStop" Width="80" Height="40" Click="btnStop_Click">暂停</Button>
        </StackPanel>
    </Grid>
</Window>
